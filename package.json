{
  "name": "nostr-arena",
  "version": "0.1.3",
  "description": "Nostr-based real-time multiplayer game arena. No server required.",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./react": {
      "import": "./dist/react/index.js",
      "types": "./dist/react/index.d.ts"
    },
    "./testing": {
      "import": "./dist/testing/index.js",
      "types": "./dist/testing/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "prepare": "npm run build",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "nostr",
    "multiplayer",
    "game",
    "battle",
    "matchmaking",
    "p2p",
    "realtime",
    "websocket",
    "decentralized"
  ],
  "author": {
    "name": "kako-jun",
    "url": "https://github.com/kako-jun"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kako-jun/nostr-arena.git"
  },
  "homepage": "https://github.com/kako-jun/nostr-arena#readme",
  "bugs": {
    "url": "https://github.com/kako-jun/nostr-arena/issues"
  },
  "peerDependencies": {
    "https-proxy-agent": "^7.0.0",
    "nostr-tools": "^2.0.0",
    "react": "^18.0.0 || ^19.0.0",
    "ws": "^8.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "ws": {
      "optional": true
    },
    "https-proxy-agent": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/react": "^19.0.0",
    "@types/ws": "^8.5.0",
    "https-proxy-agent": "^7.0.0",
    "nostr-tools": "^2.10.0",
    "typescript": "~5.6.2",
    "vitest": "^2.0.0",
    "ws": "^8.18.0"
  },
  "dependencies": {
    "nostr-arena": "^0.1.2"
  }
}
